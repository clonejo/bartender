format = (
    {
        name = "entry_a";
    },
    " ",
    {
        name = "entry_b";
    },
    " - and some static stuff"
);

// this is a timer entry
entry_a = {
    type = "timer";
    seconds = 2;
    sync = true;
    command = "~/dotfiles/timer_a.sh";
};

// this is a FIFO entry
entry_b = {
    type = "fifo";
    fifo_path = "~/tmp/entry_b_fifo";
    default = "some value";
};
